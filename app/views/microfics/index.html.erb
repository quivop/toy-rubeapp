<p id="notice"><%= notice %></p>

<h1>Microfics</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @microfics.each do |microfic| %>
      <tr>
        <td><%= microfic.content %></td>
        <td><%= microfic.user_id %></td>
        <td><%= link_to 'Show', microfic %></td>
        <td><%= link_to 'Edit', edit_microfic_path(microfic) %></td>
        <td><%= link_to 'Destroy', microfic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

